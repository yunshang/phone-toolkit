# uv 配置文件示例
# 如果需要使用 uv sync 功能，可以使用这个配置

[tool.uv]
# 指定 Python 版本
python-version = "3.10"

# 依赖解析策略
resolution = "highest"  # 或 "lowest-direct"

# 索引 URL
index-url = "https://pypi.org/simple"

# 额外的索引 URL（如果需要）
# extra-index-url = ["https://pypi.tuna.tsinghua.edu.cn/simple"]

[tool.uv.pip]
# pip 相关配置
# compile-bytecode = true
# no-cache = false
